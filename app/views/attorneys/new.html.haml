= render "shared/create_header"

.article-container.group
  %article.group{:role => "article"}
    .inner
      %h2 Enter attorney details
      = form_for @attorney, :url => lpa_attorneys_path(@lpa), :html => { :class => 'form' } do |attorney_form|
        = render "shared/validation_summary", :form_object => attorney_form
        = render :partial => '/shared/person_form', :locals => {:person_form => attorney_form, :show_dob => true}

        .action.group
          = attorney_form.submit "Save details", class: "button"
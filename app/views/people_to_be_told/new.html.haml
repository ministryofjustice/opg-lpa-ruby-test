= render "shared/create_header"

.article-container.group
  %article.group{:role => "article"}
    .inner
      %h2 Enter person to be told details
      = form_for @person_to_be_told, :url => lpa_people_to_be_told_path(@lpa), :html => { :class => 'form' } do |person_to_be_told_form|
        = render "shared/validation_summary", :form_object => person_to_be_told_form
        = render :partial => '/shared/person_form', :locals => {:person_form => person_to_be_told_form}

        .action.group
          = person_to_be_told_form.submit "Save and continue", class: "button"